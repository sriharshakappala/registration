<!DOCTYPE html>
<html>
<head>
  <title>Audit</title>
  <%= stylesheet_link_tag "bootstrap" %>
  <%= csrf_meta_tags %>
</head>
<body>

<body>
    <div class="clearfix"></div>
    <%= form_for(@account, :html => { :class => 'form-horizontal' }) do |f| %>

        <div class="well span10">

        <legend>Register for FixNix Audit Management</legend>

        <div class="control-group">
          <%= f.label 'First Name', :class => "control-label" %>
          <div class="controls"><%= f.text_field :firstname, :class => "input-xlarge" %></div>
        </div>

        <div class="control-group">
            <%= f.label 'Last Name', :class => "control-label" %>
            <div class="controls"><%= f.text_field :lastname, :class => "input-xlarge" %></div>
        </div>

        <div class="control-group">
            <%= f.label 'Company', :class => "control-label" %>
            <div class="controls"><%= f.text_field :company, :class => "input-xlarge" %></div>
        </div>

        <div class="control-group">
            <%= f.label 'Email', :class => "control-label" %>
            <div class="controls"><%= f.text_field :email, :class => "input-xlarge" %></div>
        </div>

        <div class="control-group">
            <%= f.label 'Contact Number', :class => "control-label" %>
            <div class="controls"><%= f.text_field :contact, :class => "input-xlarge" %></div>
        </div>

        <div class="control-group">
            <%= f.label 'Password', :class => "control-label" %>
            <div class="controls"><%= f.text_field :password, :class => "input-xlarge" %></div>
        </div>

        <div class="control-group">
            <%= f.label 'Desired Web Address', :class => "control-label" %>
            <div class="controls"><%= f.text_field :webaddress, :class => "input-xlarge" %>.fixrnix.in</div>
        </div>

        <div class="control-group">
            <%= f.label 'Team Size', :class => "control-label" %>
            <div class="controls"><%= f.select :teamsize, [['< 10', '1'], ['10 - 50', '2'], ['50 - 250', '3'], ['> 250', '4']], {}, :class => "input-xlarge" %></div>
        </div>

        <div class="control-group">
          <div class="controls">
            <%= f.submit 'Sign Up with PayZippy', :class => "btn btn-info" %>
            <%= f.submit 'Sign Up with PayPal', :class => "btn btn-info" %>
          </div>
        </div>

        </div>

    <% end %>
</body>

